<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F7F9">

    <!-- CONTENT -->
    <LinearLayout
        android:id="@+id/scanContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Logo / Header -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/ic_shield"
            android:contentDescription="App logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Scam Helper"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- cameraImage: giữ ID cũ -->
        <ImageView
            android:id="@+id/cameraImage"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/ic_camera"
            android:contentDescription="Scan icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Scan a screenshot or photo to detect scams"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="We'll analyze it for potential threats"
            android:textSize="14sp"
            android:textColor="#8E8E93"
            android:gravity="center" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Primary: captureImgBtn (giữ ID cũ) -->
        <Button
            android:id="@+id/captureImgBtn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Take Photo"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:cornerRadius="26dp"
            app:backgroundTint="#027bfe"/>
        <!-- Secondary: captureImgBtnLib (giữ ID cũ) -->
        <Button
            android:id="@+id/captureImgBtnLib"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:text="Choose from Library"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:cornerRadius="26dp"
            app:backgroundTint="#027bfe"/>

        <!-- Hidden debug / result area (giữ ID cũ để code không gãy) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="OCR Text:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_card"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:textSize="14sp"
            android:textColor="#000000"
            android:visibility="gone" />

        <Button
            android:id="@+id/copyTextBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="Copy Text"
            android:textAllCaps="false"
            android:background="@drawable/bg_secondary_button"
            android:textColor="#007AFF"
            android:visibility="gone" />

        <Button
            android:id="@+id/checkPhishingBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="Check Phishing"
            android:textAllCaps="false"
            android:background="@drawable/bg_secondary_button"
            android:textColor="#007AFF"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- BOTTOM NAV -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:menu="@menu/menu_bottom_nav" />

</LinearLayout>
