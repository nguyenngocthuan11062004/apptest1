<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/cameraImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/outline_animated_images_24" />

    <Button
        android:id="@+id/captureImgBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/green"
        android:text="Capture image" />

    <Button
        android:id="@+id/captureImgBtnLib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/green"
        android:text="Capture From Library" />

    <Button
        android:id="@+id/checkPhishingBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/green"
        android:text="Check Phishing" />

    <!-- LABEL OCR -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="OCR Text:"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <!-- OCR RESULT -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAlignment="textStart" />

    <!-- COPY BUTTON -->
    <Button
        android:id="@+id/copyTextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/green"
        android:text="Copy Text"
        android:visibility="gone" />

    <!-- PHISHING RESULT STATUS -->
    <TextView
        android:id="@+id/phishingStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text=""
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>
