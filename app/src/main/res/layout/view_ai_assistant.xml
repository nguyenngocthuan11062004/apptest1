<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aiAssistantContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_ai_explain_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_ai"
            android:tint="#027BFE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security Assistant"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#027BFE"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/aiInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Paste an email, message, or ask a question..."
        android:minLines="3"
        android:gravity="top"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_input"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnAskAI"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Ask AI"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        android:backgroundTint="#027BFE"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/aiAnswerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:textColor="#333333"
        android:lineSpacingExtra="6dp"
        android:visibility="gone" />

</LinearLayout>
